<h1>Listing tasks</h1>

   <% if user_signed_in? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <!--<th>Description</th>-->
      <th>Duration</th>
      <th>Initialdate</th>
      <th>Enddate</th>
      <th>Author</th>
      <th>Checkbox</th>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <!--<td><%= task.description %></td>-->
        <td><%= task.duration %></td>
        <td><%= task.initialdate %></td>
        <td><%= task.enddate %></td>
        <td><%= task.author %></td>
        <td><%= task.checkbox %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%else%>
    <p>Usted no está logueado. Hágalo ahora, es gratis y lo seguirá siendo</p>
    <%end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Task', new_task_path %>
<% end %>
